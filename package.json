{
  "name": "booking-store",
  "private": true,
  "sideEffects": false,
  "version": "1.0.0",
  "scripts": {
    "build": "shopify hydrogen build",
    "dev": "shopify hydrogen dev --codegen",
    "preview": "npm run build && shopify hydrogen preview",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx .",
    "typecheck": "tsc --noEmit",
    "codegen": "shopify hydrogen codegen",
    "fetch-openapi": "curl -o ./openapi.yaml https://raw.githubusercontent.com/jamalsoueidan/booking-api/main/docs/openapi.yaml",
    "build-openapi": "rimraf app/lib/api/model && npx orval --config ./orval.config.js",
    "fb-openapi": "npm run fetch-openapi & npm run build-openapi"
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@mantine/core": "^7.1.7",
    "@mantine/hooks": "^7.1.7",
    "@mantine/modals": "^7.1.7",
    "@mantine/nprogress": "^7.1.7",
    "@remix-run/css-bundle": "2.1.0",
    "@remix-run/react": "2.1.0",
    "@remix-validated-form/with-zod": "^2.0.7",
    "@shopify/cli": "3.50.0",
    "@shopify/cli-hydrogen": "^6.0.0",
    "@shopify/hydrogen": "^2023.10.0",
    "@shopify/remix-oxygen": "^2.0.0",
    "@tabler/icons-react": "^2.40.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^3.6.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-validated-form": "^5.1.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "2.1.0",
    "@remix-run/eslint-config": "2.1.0",
    "@shopify/oxygen-workers-types": "^3.17.3",
    "@shopify/prettier-config": "^1.1.2",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/eslint": "^8.4.10",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.53.0",
    "eslint-plugin-hydrogen": "0.12.2",
    "orval": "^6.16.0",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.9.1",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.13"
  }
}
